@model Vidly.ViewModels.CustomersViewModel

<h1>Customers</h1>

@if (Model.Customers.Count == 0)
{
    <p>We don't have any customers yet.</p>
}
else
{
    <a href="Customers/New" class="btn btn-primary mb-1">New customer</a>
    <table class="table table-bordered table-hover" id="customers">
        <thead>
            <tr>
                <th>Customer</th>
                <th>Discount Rate</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model.Customers)
            {
                <tr>
                    <td><a href="Customers/Edit/@customer.Id">@customer.Name</a></td>
                    <td>@customer.MembershipType.Name</td>
                    <td>
                        <button data-customer-id="@customer.Id" class="btn-link js-delete">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
@section scripts
{
    <script>
        $(document).ready(function () {
            $("#customers .js-delete").on("click", function () {
                var button = $(this);

                bootbox.confirm("Are you sue you want to delete this customer?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/customers/" + button.attr("data-customer-id"),
                            method: "DELETE",
                            succes: function () {

                            },
                            complete: function () {
                                button.parents("tr").remove();
                            }
                        });
                    }
                });
            });
        });
    </script>
}
